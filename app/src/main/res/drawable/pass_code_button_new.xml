<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <corners android:radius="33dp" />
            <stroke android:width="1dip" android:color="@color/colorAccent" />
            <gradient android:angle="90" android:endColor="#5effffff" android:startColor="#7b000000" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <corners android:radius="33dp" />
            <stroke android:width="1dip" android:color="#ffffff" />
            <solid android:color="#676767" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <corners android:radius="33dp" />
            <stroke android:width="1dip" android:color="@color/colorAccent" />
            <gradient android:angle="90" android:endColor="#6bffffff" android:startColor="#72000000" />
        </shape>
    </item>
</selector>